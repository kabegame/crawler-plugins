{
  "baseUrl": "https://anihonetwallpaper.com",
  "var": [
    {
      "key": "start_page",
      "type": "int",
      "name": "起始页面",
      "descripts": "要拉取的起始页面",
      "default": 1,
      "min": 1,
      "max": 5
    },
    {
      "key": "max_pages",
      "type": "int",
      "name": "结束页数",
      "descripts": "要拉取的结束页面",
      "default": 5,
      "min": 1,
      "max": 5
    },
    {
      "key": "wallpaper_type",
      "type": "options",
      "name": "壁纸类型",
      "descripts": "选择要爬取的壁纸类型：桌面壁纸（imgpc）或手机壁纸（sp）",
      "options": [
        { "name": "桌面壁纸", "variable": "imgpc" },
        { "name": "手机壁纸", "variable": "sp" }
      ],
      "default": "imgpc"
    },
    {
      "key": "ranking_period",
      "type": "options",
      "name": "排行榜周期",
      "descripts": "选择要爬取的排行榜周期：日榜、周榜、月榜或年榜",
      "options": [
        { "name": "日榜", "variable": "daily" },
        { "name": "周榜", "variable": "weekly" },
        { "name": "月榜", "variable": "monthly" },
        { "name": "年榜", "variable": "annual" }
      ],
      "default": "daily"
    }
  ]
}
