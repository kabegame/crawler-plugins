{
  "name": "crawler-plugins",
  "namedInputs": {
    "pluginFiles": ["{projectRoot}/plugins/**/*"],
    "localImportFiles": ["{projectRoot}/plugins/local-import/**/*"],
    "packageScript": ["{projectRoot}/package-plugin.js"],
    "packageConfig": [
      "{projectRoot}/package.json",
      "{projectRoot}/pnpm-lock.yaml",
      "{projectRoot}/project.json"
    ],
    "normalInputs": ["pluginFiles", "packageScript", "packageConfig"],
    "localInputs": ["localImportFiles", "packageScript", "packageConfig"]
  },
  "targets": {
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["normalInputs"],
      "outputs": ["{projectRoot}/packed/**/*"]
    },
    "package-local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --only local-import",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["localInputs"],
      "outputs": ["{projectRoot}/packed/**/*"]
    },
    "package-to-data": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --out-dir ../data/plugins-directory",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["normalInputs"],
      "outputs": ["{workspaceRoot}/data/plugins-directory/**/*"]
    },
    "package-local-to-data": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --only local-import --out-dir ../data/plugins-directory",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["localInputs"],
      "outputs": ["{workspaceRoot}/data/plugins-directory/**/*"]
    },
    "package-to-resources": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --out-dir ../src-tauri/app-main/resources/plugins",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["normalInputs"],
      "outputs": ["{workspaceRoot}/src-tauri/resources/plugins/**/*"]
    },
    "package-local-to-resources": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --only local-import --out-dir ../src-tauri/app-main/resources/plugins",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["localInputs"],
      "outputs": ["{workspaceRoot}/src-tauri/resources/plugins/**/*"]
    }
  }
}
