{
  "name": "crawler-plugins",
  "namedInputs": {
    "pluginFiles": [
      "{projectRoot}/plugins/**/manifest.json",
      "{projectRoot}/plugins/**/config.json",
      "{projectRoot}/plugins/**/crawl.rhai",
      "{projectRoot}/plugins/**/icon.png",
      "{projectRoot}/plugins/**/doc_root/doc.md",
      "{projectRoot}/plugins/**/doc_root/*.{jpg,jpeg,png,gif,webp,bmp,svg,ico}"
    ],
    "localImportFiles": ["{projectRoot}/plugins/local-import/**"],
    "packageScript": ["{projectRoot}/package-plugin.js"],
    "packageConfig": [
      "{projectRoot}/package.json",
      "{projectRoot}/pnpm-lock.yaml",
      "{projectRoot}/project.json"
    ]
  },
  "targets": {
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["default", "^default", "pluginFiles", "packageScript"],
      "outputs": ["{projectRoot}/packed/**/*"]
    },
    "package-local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --only local-import",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["packageConfig", "packageScript", "localImportFiles"],
      "outputs": ["{projectRoot}/packed/**/*"]
    },
    "package-to-data": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --out-dir ..\\\\data\\\\plugins-directory",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["default", "^default", "pluginFiles", "packageScript"],
      "outputs": ["{workspaceRoot}/data/plugins-directory/**/*"]
    },
    "package-local-to-data": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --only local-import --out-dir ..\\\\data\\\\plugins-directory",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["packageConfig", "packageScript", "localImportFiles"],
      "outputs": ["{workspaceRoot}/data/plugins-directory/**/*"]
    },
    "package-to-resources": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --out-dir ..\\\\src-tauri\\\\resources\\\\plugins",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["default", "^default", "pluginFiles", "packageScript"],
      "outputs": ["{workspaceRoot}/src-tauri/resources/plugins/**/*"]
    },
    "package-local-to-resources": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node package-plugin.js --only local-import --out-dir ..\\\\src-tauri\\\\resources\\\\plugins",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["packageConfig", "packageScript", "localImportFiles"],
      "outputs": ["{workspaceRoot}/src-tauri/resources/plugins/**/*"]
    }
  }
}
